#!/usr/bin/env ruby
# This command will automatically be run when you run "rails" with Rails gems installed from the root of your application.

ENGINE_ROOT = File.expand_path('..', __dir__)
ENGINE_PATH = File.expand_path('../lib/lr_common_styles/engine', __dir__)

# Set up gems listed in the Gemfile.
ENV['BUNDLE_GEMFILE'] ||= File.expand_path('../Gemfile', __dir__)
require 'bundler/setup' if File.exist?(ENV['BUNDLE_GEMFILE'])

# Note: This gem primarily uses ActionView and ActionDispatch (not ActiveRecord,
# ActionController, ActionMailer, etc.). While best practice would be to require
# only specific components (e.g., 'action_view/railtie', 'action_dispatch/railtie'),
# we keep 'rails/all' here since this bin/rails file is only used during gem
# development/testing, not in production. The performance impact is negligible and
# this ensures full Rails functionality is available during development.
require 'rails/all'
require 'rails/engine/commands'
